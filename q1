#include <iostream>
#include <vector>
#include <iomanip>
using namespace std;

class Course {
public:
    string grade;
    int creditHours;
    float gradePoint;

    Course(string g, int c) {
        grade = g;
        creditHours = c;
        gradePoint = convertGradeToPoint(g);
    }

    float convertGradeToPoint(string g) {
        if (g == "A" || g == "a") return 10.0;
        else if (g == "A-") return 9.0;
        else if (g == "B") return 8.0;
        else if (g == "B-") return 7.0;
        else if (g == "C") return 6.0;
        else if (g == "C-") return 5.0;
        else if (g == "D") return 4.0;
        else return 0.0;  // For F or invalid input
    }

    float getGradePoints() {
        return gradePoint * creditHours;
    }

    void displayCourse(int index) {
        cout << "Course " << index + 1 << ": Grade = " << grade
             << ", Credit Hours = " << creditHours
             << ", Grade Points = " << getGradePoints() << endl;
    }
};

class GPA_Calculator {
private:
    vector<Course> courses;
    int totalCredits = 0;
    float totalGradePoints = 0.0;

public:
    void inputCourses() {
        int n;
        cout << "Enter number of courses: ";
        cin >> n;

        for (int i = 0; i < n; ++i) {
            string grade;
            int credit;
            cout << "Enter grade (A, A-, B, B-, etc.) for course " << i + 1 << ": ";
            cin >> grade;
            cout << "Enter credit hours for course " << i + 1 << ": ";
            cin >> credit;
            Course c(grade, credit);
            courses.push_back(c);
            totalCredits += credit;
            totalGradePoints += c.getGradePoints();
        }
    }

    void displayResults() {
        cout << "\n--- Course Details ---\n";
        for (int i = 0; i < courses.size(); ++i) {
            courses[i].displayCourse(i);
        }
        float cgpa = totalGradePoints / totalCredits;
        cout << fixed << setprecision(2);
        cout << "\nTotal Credits: " << totalCredits << endl;
        cout << "Total Grade Points: " << totalGradePoints << endl;
        cout << "Final CGPA: " << cgpa << endl;
    }
};

int main() {
    GPA_Calculator calc;
    calc.inputCourses();
    calc.displayResults();
    return 0;
}
